<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/circular"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/count"
        android:gravity="center"
        android:text="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/graycolor"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/txtopportunity"
        android:fontFamily="@font/roboto_regular"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/circular"
        android:layout_marginTop="30dp"
        android:text="Pending Task"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewOne"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/txtopportunity"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNFYD BOT"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_regular"

                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="23 Mar"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_regular"

                android:textColor="@color/graycolor" />
            <ImageView
                android:id="@+id/emp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/title"
                android:src="@drawable/employee"/>
            <ImageView
                android:id="@+id/phone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/emp"
                android:src="@drawable/phone"/>

            <ImageView
                android:id="@+id/flag"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/phone"
                android:src="@drawable/flag"/>
            <TextView
                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Follow Up"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_regular"

                android:layout_below="@id/time"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/graycolor" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akshata G"
                android:layout_below="@id/time"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="17dp"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_regular"

                android:textColor="@color/graycolor" />
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9763639161"
                android:layout_below="@id/name"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_regular"

                android:textColor="@color/graycolor" />
            <TextView
                android:id="@+id/intrest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer not Intrested"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_regular"

                android:layout_below="@id/number"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/graycolor" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>